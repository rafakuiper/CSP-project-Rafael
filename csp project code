

import turtle as trtl
import random

painter = trtl.Turtle()

start_loop = 'y' 

while (start_loop == 'y'):
  

  a=random.randint(10,50)
  b=random.randint(-360,360)
  c=random.randint(-360,360)
  d=random.randint(0, 10)
  
  painter.forward(a)
  painter.left(b)
  painter.right(c)
  painter.circle(d)
  painter.goto(0,0)
  
  
  

  
  
  

wn = trtl.Screen()
wn.mainloop() 



